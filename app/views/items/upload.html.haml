= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg
  .field{:style => "float: left; margin: 10px;\n    width: 500px; height: 500px;"}
    = image_tag "/images/tmp/#{@item.path}", class: 'tmp-image', |
      style: 'max-width: 450px; max-height: 450px;'              |
    %br/
    = f.hidden_field :path
  %div{:style => "float: left; margin: 10px;"}
    .field
      = f.label :title
      %br/
      = f.text_field :title
    .field
      = f.label :description
      %br/
      = f.text_area :description
    .field
      = f.label :breed
      %br/
      = f.text_field :breed
    .actions
      = f.submit
  %div{:style => "clear: both;"}
