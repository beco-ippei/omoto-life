#top-menu
  #top-title
    = link_to root_path do
      %span.logo
      %span.logo-title
        おもとも！
  #navigation
    .menu-wrapper
      = link_to items_path do
        .menu-item
          %span.menu-text
            %i.icon-group>
            \&nbsp;おもと
    /.menu-wrapper
    /  %a{:href => "/map"}
    /  .menu-item
    /    %span.menu-text ご近所
    .menu-wrapper
      = link_to new_item_path do
        .menu-item
          %span.menu-text
            アップロード
  .clear
#header-status
  - if notice
    %span#notice= notice
  - elsif alert
    %span#alert= alert
  - if current_user
    %span.logout.float
      (
      = link_to destroy_user_session_path do
        %i.icon-signout>
        ログアウト
      )
    %span.user-info.float
      = link_to user_path(current_user) do
        = current_user.name
  - else
    %span.login.float
      (
      = link_to new_user_session_path do
        %i.icon-signin>
        ログイン
      )

