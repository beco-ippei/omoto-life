<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
      <th>Description</th>
      <th>Breed</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td>
          <%= image_tag "//img.beco-ippei.net/1/#{item.path}",
            style: 'max-width: 300px; max-height: 300px;' %>
        </td>
        <td><%= item.description %></td>
        <td><%= item.breed %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

