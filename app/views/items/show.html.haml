.item-view
  .image-pane
    %span.image-frame
      = image_tag image_path(@item), class: 'main-image'
  .info-pane
    - if current_user && current_user.id == @item.user.id
      .edit.field
        = link_to edit_item_path(@item) do
          %button{class: 'btn btn-warning'} 変更する
    .field.title
      %span.field-value
        = "「 #{@item.title} 」"
    .field
      品種:
      %span.field-value
        = @item.breed
    .field
      .desc-text
        = raw(h(@item.description).gsub(/\n/, '<br>'))
    %hr
    .comments
      - @item.comments.each do |comment|
        .field.comment
          = link_to user_path comment.user do
            = comment.user.name
          &nbsp;:
          %span.field-value
            = comment.body
      - if current_user
        .field
          = form_tag item_comments_path(@item), method: :post do |f|
            .comment-input
              .comment-text
                = text_area_tag :body, nil, rows: 2, class: 'form-control comment'
              .comment-submit
                = button_tag '送信', class: 'btn btn-info comment'

  .clear

